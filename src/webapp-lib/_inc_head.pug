- var BASE_URL = htmlWebpackPlugin.options.BASE_URL;
- var RES_VERSIONS = htmlWebpackPlugin.options.RES_VERSIONS;

meta(charset="utf-8")
meta(name="apple-mobile-web-app-capable", content="yes")
meta(name="apple-mobile-web-app-status-bar-style", content="black")

meta(name="viewport"    content="width=device-width, initial-scale=1.0, user-scalable=no")
meta(http-equiv="X-UA-Compatible" content="IE=edge")
meta(name="google"      content="notranslate")

//- http://realfavicongenerator.net
link(rel="apple-touch-icon", sizes="180x180", href= BASE_URL + "/webapp/apple-touch-icon.png")
link(rel="icon", type="image/png", href=BASE_URL + "/webapp/favicon-32x32.png", sizes="32x32")
link(rel="icon", type="image/png", href=BASE_URL + "/webapp/favicon-16x16.png", sizes="16x16")
link(rel="manifest", href=BASE_URL + "/webapp/cocalc.manifest")
link(rel="mask-icon", href=BASE_URL + "/webapp/safari-pinned-tab.svg", color="#fbb635")

meta(name="apple-mobile-web-app-title", content="CoCalc")
meta(name="application-name", content="CoCalc")
meta(name="theme-color", content="#fbb635")

// - I'm putting this here as a hack to minize the embarassing style flicker as -- I guess (?) -- react-bootstrap loads.
// This is meant to be "better than nothing", but not much better!
// See https://github.com/sagemathinc/cocalc/issues/2510
link(rel="stylesheet", href=BASE_URL + "/res/bootstrap-" + RES_VERSIONS.bootstrap + "/bootstrap.min.css")

link(rel="stylesheet", href=BASE_URL + "/res/roboto-fontface-" + RES_VERSIONS["roboto-fontface"] + "/css/roboto-slab/roboto-slab-fontface.css")

link(rel="stylesheet", href=BASE_URL + "/res/katex-" + RES_VERSIONS.katex + "/katex.min.css")

link(rel="stylesheet", href=BASE_URL + "/res/fontawesome-free-" + RES_VERSIONS["fontawesome-free"] + "/css/all.min.css")
